# Start from the official Golang base image
FROM golang:1.20 as builder

# Set environment variables
ENV GO111MODULE=on \
    CGO_ENABLED=0 \
    GOOS=linux \
    GOARCH=amd64

# Set working directory
WORKDIR /app

# Copy go.mod and go.sum files and download dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy the source code
COPY . .

# Build the Go app
RUN go build -o server ./cmd/server

# Use a minimal base image for final build
FROM alpine:latest

# Set working directory in the minimal image
WORKDIR /root/

# Copy the built binary from the builder
COPY --from=builder /app/server .

# Copy the Firebase credentials (optional: mount via volume or use secrets in production)
COPY config/serviceAccountKey.json ./config/serviceAccountKey.json

# Expose the application port
EXPOSE 8080

# Run the binary
CMD ["./server"]
